<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <td scope="col"><%= t('views.user.username') %></td>
      <td scope="col"><%= t('views.user.email')  %></td>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
    <tr>
      <td scope="row"><%= user.username %></td>
      <td scope="row"><%= user.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('views.home'), tasks_path, class:"btn btn-primary btn-lg btn-block" %>