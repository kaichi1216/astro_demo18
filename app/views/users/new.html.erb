<div class="row justify-content-md-center">
    <div class="col-4">
      <div class="card mt-5">
        <div class="card-header text-center">
          <%= t('user.signup')%>
        </div>
        <div class="card-body">
          <%= simple_form_for @user do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :username,label: t('views.user.username'), required: false, autofocus: true %>
              <%= f.input :email,label: t('views.user.email'), placeholder: "example@gmail.com", required: false, autofocus: true %>
              <%= f.input :password,label: t('views.user.password'), placeholder: "minimum 6", required: false %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t("views.user.sign_up"), class:'btn btn-primary form-control' %>
            </div>
          <% end %>

        </div>
        <div class="card-footer text-muted">
        </div>
      </div>
    </div>
  </div>

