<div class="row justify-content-md-center">
  <div class="col-4">
    <div class="card mt-5">
      <div class="card-header text-center">
        <%= t('user.login') %>
      </div>
      <div class="card-body">
        <%= simple_form_for(:session, url: login_path) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,label: t('views.user.email'), required: false, autofocus: true %>
            <%= f.input :password,label: t('views.user.password'), required: false %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, t('user.login') ,class:'btn btn-primary form-control'%>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <%= t('user.newuser') %> <%= link_to t('user.signup'), new_user_path %>
      </div>
    </div>
  </div>
</div>