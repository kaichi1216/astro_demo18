<% if @task.errors.present? %>
<ul>
  <% @task.errors.each do |error, message| %>
    <li><%= "#{error.capitalize} #{message} "%></li>
  <% end %>
</ul>
<% end %>


<%= simple_form_for(task) do |f| %>
  <%= f.input :task, label: t('views.tasks.title') %>
  <%= f.input :remenber_created_at, label: t('views.tasks.deadline') %>
  <%= f.input :content, as: :text, label: t('views.tasks.content') %>
  <%= f.button :submit, t('views.submit_btn') %>
<% end %>
