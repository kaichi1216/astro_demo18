<h1>任務列表</h1>

<%= link_to "新增任務", new_task_path %>

<table>
  <thead>
    <tr>
      <td>任務</td>
      <td>日期</td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.task %></td>
      <td><%= task.created_at %></td>
      <td>
        <%= link_to "編輯", edit_task_path(task) %>
        <%= link_to "查看", task_path(task) %>
        <%= link_to "刪除", task_path(task), method: "delete", data:{ confirm: "確定刪除這個任務嗎?"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>