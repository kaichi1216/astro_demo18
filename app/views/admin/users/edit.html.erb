<div class="row justify-content-md-center">
    <div class="col-4">
      <div class="card mt-5">
        <div class="card-header text-center">
          <%= t('user.edit_user')%>
        </div>
        <div class="card-body">
          <%= simple_form_for [:admin, @user] do |f| %>
            <div class="form-inputs">
              <%= f.input :username,label: t('views.user.username'), required: false, autofocus: true %>
              <%= f.input :role, label: t('admin.identity'), collection: [:menber, :admin] %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t("views.submit_btn"), class:'btn btn-primary form-control' %>
            </div>
          <% end %>

        </div>
        <div class="card-footer text-muted">
        </div>
      </div>
    </div>
  </div>